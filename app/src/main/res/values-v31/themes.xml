<resources>
    <!-- Same style name and parent; adds Android 12+ splash items -->
    <style name="Theme.AliveShow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- SplashScreen API (Android 12+) -->
        <item name="android:windowSplashScreenBackground">#0A0F1E</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Return to same theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.AliveShow</item>
    </style>
</resources>